<?xml version="1.0"?>
<robot name="my_robot">

  <!-- Dummy root link -->
  <link name="base_footprint"/>

  <!-- Fixed joint connecting dummy link to base_link -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="file://my_robot/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <!-- <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material> -->
    </visual>
    <collision>
      <geometry>
        <mesh filename="file://my_robot/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <ode>
        <mu>0.001</mu>         <!-- Coefficient of friction -->
        <mu2>0.001</mu2>       <!-- Second coefficient (for anisotropic surfaces) -->
      </ode>
    </collision>
    <inertial>
      <origin xyz="-0.02 0.0 0.04" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Left wheel -->
  <link name="wheel_left_link">
    <visual>
      <geometry>
        <mesh filename="file://my_robot/meshes/wheel-assembly.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="file://my_robot/meshes/wheel-assembly.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>2.0</mu>
            <mu2>2.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <origin xyz="0.0 0.06 0.0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>

  <!-- Right wheel -->
  <link name="wheel_right_link">
    <visual>
      <geometry>
        <mesh filename="file://my_robot/meshes/wheel-assembly.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="file://my_robot/meshes/wheel-assembly.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>2.0</mu>
            <mu2>2.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <origin xyz="0.0 0.06 0.0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0 0.0 0.045" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="1.0" friction="0.0"/>
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0 0.0 0.045" rpy="0 0 3.14"/>
    <axis xyz="0 -1 0"/>
    <dynamics damping="1.0" friction="0.0"/>
  </joint>

  <!-- DiffDrive plugin to move the robot -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
      </ros>

      <update_rate>30</update_rate>

      <!-- Wheels -->
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>

      <!-- Wheel and base parameters -->
      <wheel_separation>0.12</wheel_separation>
      <wheel_diameter>0.09</wheel_diameter>

      <!-- Publish odometry -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <!-- Frame names -->
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>
  </gazebo>

</robot>

